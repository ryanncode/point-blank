{
  "name": "pointblank",
  "displayName": "Point Blank",
  "description": "Text outliner mode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:plaintext",
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [],
    "configuration": {
      "title": "Point Blank",
      "properties": {
        "pointblank.level1Color": {
          "type": "string",
          "description": "Color for level 1 decorators."
        },
        "pointblank.level2Color": {
          "type": "string",
          "description": "Color for level 2 decorators."
        },
        "pointblank.level3Color": {
          "type": "string",
          "description": "Color for level 3 decorators."
        },
        "pointblank.level4Color": {
          "type": "string",
          "description": "Color for level 4 decorators."
        },
        "pointblank.level5Color": {
          "type": "string",
          "description": "Color for level 5 decorators."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@types/glob": "^8.1.0",
    "glob": "^8.1.0"
  }
}
